<Window x:Class="WPF._1.Layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF._1.Layout"
        mc:Ignorable="d"
        Title="LayoutDemo" Height="800" Width="1200">
    <Window.Resources>
        <Style x:Key="NavBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="20,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Margin="20, 0">实战训练营</TextBlock>
            <StackPanel Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft">
                <TextBlock VerticalAlignment="Center">退 出</TextBlock>
                <Grid Margin="20,0,30,0">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/logo.png"></ImageBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                <Border Style="{StaticResource NavBorderStyle}">
                    <TextBlock VerticalAlignment="Center">客服</TextBlock>
                </Border>
                <Border Style="{StaticResource NavBorderStyle}">
                    <TextBlock VerticalAlignment="Center">市场</TextBlock>
                </Border>
                <Border Style="{StaticResource NavBorderStyle}">
                    <TextBlock VerticalAlignment="Center">积分</TextBlock>
                </Border>
                <Border Style="{StaticResource NavBorderStyle}">
                    <TextBlock VerticalAlignment="Center">财务</TextBlock>
                </Border>
                <Border Style="{StaticResource NavBorderStyle}">
                    <TextBlock VerticalAlignment="Center">用户</TextBlock>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Background="#F4F4F4">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="Aqua" Margin="10"></Border>
            <Border Grid.Column="1" Background="Aqua" Margin="10"></Border>
            <Border Grid.Column="2" Background="Aqua" Margin="10"></Border>
            <Border Grid.Column="3" Background="Aqua" Margin="10"></Border>
            <Border Grid.Column="4" Background="Aqua" Margin="10"></Border>

            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Green" Margin="10"></Border>
            <Border Grid.Row="2" Background="Aqua" Margin="10"></Border>
            <Border Grid.Row="2" Grid.Column="1" Background="Aqua" Margin="10"></Border>
            <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="3" Background="Purple" Margin="10"></Border>

            <Border Grid.Row="3" Background="Aqua" Margin="10"></Border>
            <Border Grid.Row="3" Grid.Column="1" Background="Aqua" Margin="10"></Border>
            <Border Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" Background="Blue" Margin="10"></Border>

        </Grid>

        </Border>

    </Grid>
</Window>
